// Salvar nova apresentação
async function salvarApresentacao(titulo, criador, url) {
  const response = await fetch('https://seudominio.epizy.com/api.php?acao=salvar', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ titulo, criador, url })
  });

  const resultado = await response.json();
  console.log(resultado);
}
