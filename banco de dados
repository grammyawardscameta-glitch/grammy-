// Busca as apresentações do banco de dados
async function carregarApresentacoes() {
  try {
    const response = await fetch('https://seudominio.epizy.com/api.php?acao=listar');
    const dados = await response.json();

    const container = document.getElementById('listaPastas');
    container.innerHTML = '';

    dados.forEach(pasta => {
      const div = document.createElement('div');
      div.innerHTML = `<h3>${pasta.titulo}</h3>
                       <p>Criador: ${pasta.criador}</p>
                       <a href="${pasta.url}" target="_blank">Acessar Drive</a>`;
      container.appendChild(div);
    });

  } catch (error) {
    console.error('Erro ao carregar:', error);
  }
}

// Chama ao carregar a página
window.addEventListener('DOMContentLoaded', carregarApresentacoes);
